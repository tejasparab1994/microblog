<%= if @current_user do %>
<div class="col">
  <div class="row">
    <%= render MicroblogWeb.PostView, "form.html",
         Map.put(assigns, :action, post_path(@conn, :create)) %>
  </div>
</div>
<% end %>


<h1>Your Feed</h1>

<%= Enum.map @posts, fn post -> %>
<div class="row">
  <div class="col">
    <div class="card">
      <div class="card-body">
        <h6 class="card-title"><%= post.user.name %></h6>
          <p><%= post.body %></p>
      </div>

    </div>

  </div>

</div>
<% end %>
