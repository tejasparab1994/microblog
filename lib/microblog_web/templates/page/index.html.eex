<div class="row">
  <div class="col">
    <h1>Microblog: Log In</h1>
    <%= form_tag("/session", method: :post) do %>
      <div class="form-group">
        Email
        <input type="email" name="email" placeholder="usr@example.com">
      </div>

      <!-- TODO: Add passwords after the password security lecture. -->
      <div class="form-group">
        <button class="btn btn-primary">Log In</button>
        <%= link "Register", to: user_path(@conn, :new) %>
      </div>
    <% end %>
  </div>
</div>
